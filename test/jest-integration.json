{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testMatch": ["<rootDir>/test/integration/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage-integration",
  "testEnvironment": "node",
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/integration/setup.ts"],
  "testTimeout": 60000,
  "verbose": true
}